	<block wx:for="{{templateList}}" wx:for-item="item" wx:key="index">
		<template-card
		  id="{{independentID}}-gd-{{index}}"
		  data="{{item}}"
		  currency="{{item.currency || 'Â¥'}}"
		  thresholds="{{thresholds}}"
		  class="template-card-inside"
		  data-index="{{index}}"
		  bind:thumb="onClickTemplateThumb"
		  bind:click="onClickTemplate"
		  bind:add-cart="onAddCart"
		/>
	</block>
</view>

