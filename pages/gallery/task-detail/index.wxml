<wxs src="/utils/num.wxs" module="toolNum" />
<view class="gallery-detail">
  <view style="text-align: center; color: #b9b9b9" wx:if="{{pageLoading}}">
    <t-loading theme="circular" size="40rpx" text="加载中..." inherit-color />
  </view>
  <view class="gallery-detail-page-container" wx:else>
    <!-- {{galleryTab}} -->
    <view class="image-wrapper">
      <!-- <t-image style="width: 100%; height: 100%;" show-menu-by-longpress src="{{task.img}}"></t-image> -->
      <image style="width: 100%; height: 100%;" show-menu-by-longpress src="{{task.img}}"></image>
    </view>
    <view class="details-wrapper">
      <view class="detail-item">
        <view class="form-item-title">风格模板</view>
        <view>
          <t-tag class="style" variant="light" theme="primary" shape="round">{{task.creation_template_name}}</t-tag>
        </view>
      </view>
      <view class="detail-item">
        <view class="form-item-title">生成参数</view>
        <view>
          <t-tag class="params" wx:for="{{ task.tags }}" wx:key="param" wx:for-item="param"
              variant="light"
              theme="{{themeList[toolNum.rdiv(index, 4)]}}"
              shape="round">{{param}}</t-tag>
        </view>
      </view>
    </view>
  </view>
</view>