.creation-card {
  box-sizing: border-box;
  /* box-sizing: content-box; */
  font-size: 24rpx;
  border-radius: 0 0 16rpx 16rpx;
  border-bottom: none;
}

.creation-card__main {
  position: relative;
  display: flex;
  line-height: 1;
  padding: 0;
  background: transparent;
  width: 342rpx;
  border-radius: 16rpx;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  flex-direction: column;
  overflow: hidden;
}

.creation-card__thumb {
  flex-shrink: 0;
  position: relative;
  width: 100%;
  height: 340rpx;
}

.creation-card__thumb:empty {
  display: none;
  margin: 0;
}

.creation-card__img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
}

.status-wrapper {
  position: absolute;
  background-color: black;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.status-text {
  font-size: 48rpx;
  color: white;
}

.title {
  position: absolute;
  bottom: 24rpx;
  left: 24rpx;
  right: 24rpx;
  background: rgba(80, 80, 80, 0.6);
  color: white;
  padding: 8rpx 12rpx;
}

.creation-card__body {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex: 1 1 auto;
  background: #fff;
  border-radius: 0 0 16rpx 16rpx;
  padding: 16rpx 24rpx 18rpx;
  flex-direction: column;
}

.creation-card__upper {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  flex: 1 1 auto;
}

.creation-card__name {
  flex-shrink: 0;
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
  display: -webkit-box;
  height: 72rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-word;
  line-height: 36rpx;
}

.creation-card__tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 8rpx 0 0 0;
}

.creation-card__tag {
  margin: 0 8rpx 8rpx 0;
}

.creation-card__tag-positive {
  color: #298a26;
  background: transparent;
  font-size: 20rpx;
  border: 1rpx solid #298a26;
  padding: 0 8rpx;
  border-radius: 16rpx;
  line-height: 30rpx;
  margin: 0 8rpx 8rpx 0;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  word-break: keep-all;
  text-overflow: ellipsis;
}

.creation-card__down {
  display: flex;
  position: relative;
  flex-direction: row;
  justify-content: flex-start;
  align-items: baseline;
  line-height: 32rpx;
  margin: 8rpx 0 0 0;
}