	<block wx:for="{{creationList}}" wx:for-item="item" wx:key="index">
		<creation-card
		  id="{{independentID}}-gd-{{index}}"
		  data="{{item}}"
		  currency="{{item.currency || 'Â¥'}}"
		  thresholds="{{thresholds}}"
		  class="creation-card-inside"
