@import '../../../style/global.wxss';
page {
  width: 100vw;
}

.choose-image-page .design-content {
  background: rgb(216, 215, 215);
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.design-content-container {
  width: 500rpx;
  height: 500rpx;
  border: 1px dotted blue;
  background: #fff;
}

.design-image, .design-image image {
  width: 100%;
  height: 100%;
}

.design-add {
  position: relative;
  display: flex;
  line-height: 1;
  padding: 0;
  background: transparent;
  width: 100%;
  height: 100%;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.design-bottom {
  position: fixed;
  bottom: 0;
  background: #fff;
  width: 100%;
}

.design-warn {
  background: rgb(252, 248, 195);
}

.design-bottom .design-bar {
  padding: 8px 24px;
  height: 150rpx;
}

.design-submit-button {
  width: 100%;
}

.choose-source-popup {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 480rpx;
  /* height: 480rpx; */
  background: var(--td-bg-color-container);
  border-radius: 16rpx;
  padding: 32px 0px;
}

.choose-source-popup .button {
  width: 80%;
  margin-bottom: 32rpx;
}

.close-btn {
  position: absolute;
  left: 50%;
  margin-left: -32rpx;
  bottom: calc(-1 * (48rpx + 64rpx));
}